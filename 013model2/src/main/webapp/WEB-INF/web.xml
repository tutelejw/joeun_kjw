<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">   
		
	 <servlet>
		
		<!-- ControlServlet.class 논리적 이름 정의  -->
        <servlet-name>controller</servlet-name>
        <servlet-class>spring.model2.control.DispatcherServlet</servlet-class>
		<!--  Servlet Life Cycle 이해...
				:: 최최 Request 시 WAS Thread 발생  init() / service()호출
				:: 이후 Request 시 WAS Thread 발생 service() 호출  -->
			
		<!-- WAS 구동시 Servlet  loading (console 창 확인)	-->
		<load-on-startup>1</load-on-startup>
	 </servlet>
	 
	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
		
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
</web-app>